(define is
  (macro (form)
    '(cond ((not ~form)
            (print "Assertion failed:" (quote ~form))))))

;; Atomicity
(is (atom 31337))
(is (atom "ohai"))
(is (atom ()))
(is (not (atom '(1 3 3 7))))

;; Equality
(is (= 1 1))
(is (= 1 1337/1337))
(is (not (= 1 2)))
(is (not (= 1 1.0)))
(is (= "foo" "foo"))
(is (not (= "foo" "bar")))
(is (= '(1 2 3) '(1 2 3)))
(is (not (= '(1 2 3) '(1 2))))
(is (= () ()))
(is (= 'omg-a-symbol 'omg-a-symbol))
(is (not (= 'omg-a-symbol 'omg-another-symbol)))
(is (not (= 1337 "1337")))
(is (not (= 'symbol "symbol")))

;; Reader macro characters
(is (= '(1 2 3) '(1 2 ~(+ 1 2))))
(is (= '(1 2 3) '(~@(quote (1 2 3)))))
